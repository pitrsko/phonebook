
<body onload="M.toast({html: '{{name}} <br> {{phone}} <br> úspešne vymazaný'})">

{{#each zoznam}}
 <div class="row">
    <div class="col s12 m12">
      <div class="card blue lighten-1">
        <div class="card-content white-text" id="phoneItem">
          <span class="card-title">{{this.name}} - {{this.phone}}</span>
        </div>
        <div class="card-action">
          <a href="/edit/{{this.id}}" class="white-text">Upraviť záznam</a>
          <a href="/delete/{{this.id}}" class="white-text">Vymazať záznam</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}
