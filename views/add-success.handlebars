<body onload="M.toast({html: '{{data.name}} <br> {{data.number}} <br> úspešne pridaný'})">
{{!-- Alphabetical order --}}

  <div class="col s6 left">
     <a href="/sort" ><i class="medium material-icons"> 
        

       {{#if toggle}}
       keyboard_arrow_up
       {{else}}
       keyboard_arrow_down
       {{/if}}


     </i> </a></div>
{{{index}}}
{{#each zoznam}}
 <div class="row">
    <div class="col s12 m12">
      <div class="card blue lighten-1">
        <div class="card-content white-text" >
          <span class="card-title" id="phoneItem">{{this.name}}</span>
          <p class=' white-text col'  id="telefonnecislo"> <i class="material-icons">phone</i> {{this.phone}}</p>
        </div>
        <div class = "row">
       
        </div>
        <div class="card-action">  
          <a href="/edit/{{this.id}}" class="white-text">Upraviť záznam</a>
          <a href="/delete/{{this.id}}" class="white-text">Vymazať záznam</a>
        </div>
      </div>
    </div>
  </div>  
    {{else}}
    <body onload="M.toast({html: 'Všetky záznamy úspešne vymazané'})"></body>
    
    <br><br>
        <h2>Pridajte záznam</h2>
        <br>
        <a href="/add" class="btn-large waves-effect waves"><i class="large material-icons"> add </i></a>
  {{/each}}
