<body onload="M.toast({html: '{{editDATA.name}} <br> {{editDATA.phone}} <br> úspešne upravený'})">
{{!-- Alphabetical order --}}

  <div class="col s6 left">
     <a href="/sort" ><i class="medium material-icons"> 
        

       {{#if toggle}}
       keyboard_arrow_up
       {{else}}
       keyboard_arrow_down
       {{/if}}


     </i> </a></div>

{{#each zoznam}}
 <div class="row">
    <div class="col s12 m12">
      <div class="card blue lighten-1">
        <div class="card-content white-text" id="phoneItem">
           <span class="card-title">{{this.name}}</span>
          <p class=' white-text col' style:"font-size:20px" id="telefonnecislo"> {{this.phone}}</p>
        </div>
        <div class="card-action">
         <a href="/edit/{{this.id}}" class="white-text" method="delete">Upraviť záznam</a>
          <a href="/delete/{{this.id}}" class="white-text" method="delete">Vymazať záznam</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}
